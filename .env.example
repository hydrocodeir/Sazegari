APP_NAME="سامانه سازگاری با کم‌آبی"
ENV="dev"

# SECURITY
SECRET_KEY="CHANGE_ME_NOW"
COOKIE_SECURE=false
COOKIE_SAMESITE="lax"
SESSION_MAX_AGE_SECONDS=43200

# CORS
CORS_ALLOW_ORIGINS="*"
CORS_ALLOW_CREDENTIALS=false

# DATABASE / CACHE
MYSQL_DSN="mysql+pymysql://user:password@127.0.0.1:3306/water_compat?charset=utf8mb4"
REDIS_URL="redis://127.0.0.1:6379/0"

# UPLOADS
UPLOAD_DIR="./uploads"
MAX_UPLOAD_MB=20

# DEV BOOTSTRAP
AUTO_CREATE_ADMIN=true
DEFAULT_ADMIN_USERNAME="admin"
DEFAULT_ADMIN_PASSWORD="123"
DEFAULT_ADMIN_FULL_NAME="Dev Admin"

# SAMPLE DATA (optional)
AUTO_SEED_SAMPLE=true
SAMPLE_SEED_PASSWORD="123"
